include top-menu
div(ng-controller='MainCTRL')
    table(ng-class='{"loading": loading, "main-segment-loading-height": loading}', ng-show='!loading').ui.table.inverted.main-table
        thead
            tr
                th Player
                th Playtime
                th Badges
                th Other
        tbody
            tr(ng-repeat='player in players track by $index')
                td
                    h4.ui.image.header
                        img(ng-src='http://cdn.akamai.steamstatic.com/steamcommunity/public/images/avatars/fe/fef49e7fa7e1997310d705b2a6158ff8dc1cdfeb_full.jpg', ng-show='!player.steam.avatarfull').ui.mini.rounded.image.avatar-height-67
                        img(ng-src='{{player.steam.avatarfull}}', ng-show='player.steam.avatarfull').ui.mini.rounded.image.avatar-height-67
                        .content
                            span
                                a(href='{{player.steam.profileurl}}', target="_blank") {{player.alias}} ({{player.level}})
                            .sub.header
                                .ui.mini.horizontal.statistics.inverted
                                    .statistic.margin-none
                                        .value {{player.skill | toFix}}
                                        .label skill
                                    .statistic.margin-none
                                        .value {{player.score | toFix}}
                                        .label score
                td
                    div alien : {{player.alien_playtime | msToTime}}
                    div marine : {{player.marine_playtime | msToTime}}
                    div commander : {{player.commander_time | msToTime}}
                    div all time: {{player.time_played| msToTime}}
                td
                    div(ng-repeat='badge in player.badges track by $index', class='badge {{badge}}')
                td
                    div pid: {{player.pid}}
                    div reinforced tier: {{player.reinforced_tier}}
                    div xp: {{player.xp}}
                    div upd. at {{player.update | date:'MMMM, d HH:MM'}}